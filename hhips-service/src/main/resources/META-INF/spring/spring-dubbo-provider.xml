<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="${dubbo.application.name}"/>

    <!-- 使用zookeeper注册中心暴露服务地址 -->
    <dubbo:registry address="${dubbo.registry.address}"/>

    <!-- 用dubbo协议在20880端口暴露服务 -->
    <dubbo:protocol name="dubbo" port="${dubbo.protocol.port}"/>

    <!-- 声明需要暴露的服务接口 -->
    <dubbo:service interface="com.hhips.api.demo.DemoService" ref="demoService" timeout="10000"/>

    <dubbo:service interface="com.hhips.api.persistence.DelegateService" ref="delegateService" timeout="10000"/>
    <dubbo:service interface="com.hhips.api.jms.JmsSenderService" ref="jmsSenderService" timeout="10000"/>

    <dubbo:service interface="com.hhips.api.logging.LoggingEventPropertyService" ref="loggingEventPropertyService" timeout="10000"/>
    <dubbo:service interface="com.hhips.api.logging.LoggingEventService" ref="loggingEventService" timeout="10000"/>
    <dubbo:service interface="com.hhips.api.logging.LoggingEventExceptionService" ref="loggingEventExceptionService" timeout="10000"/>

    <dubbo:service interface="com.hhips.api.user.SysUserService" ref="sysUserService" timeout="10000"/>
    <dubbo:service interface="com.hhips.api.user.UserRoleRelService" ref="userRoleRelService" timeout="10000"/>

    <dubbo:service interface="com.hhips.api.role.SysRoleService" ref="sysRoleService" timeout="10000"/>
    <dubbo:service interface="com.hhips.api.role.RoleMenuRelService" ref="roleMenuRelService" timeout="10000"/>

    <dubbo:service interface="com.hhips.api.menu.SysMenuService" ref="sysMenuService" timeout="10000"/>

    <dubbo:service interface="com.hhips.api.product.TbProductService" ref="tbProductService" timeout="10000"/>

    <dubbo:service interface="com.hhips.api.chapter.SysChapterService" ref="sysChapterService" timeout="10000"/>

    <dubbo:service interface="com.hhips.api.problem.ProblemService" ref="problemService" timeout="10000"/>

    <dubbo:service interface="com.hhips.api.problem.ModuleService" ref="moduleService" timeout="10000"/>

    <dubbo:service interface="com.hhips.api.problem.SourceChapterService" ref="sourceChapterService" timeout="10000"/>

    <dubbo:service interface="com.hhips.api.problem.SourceService" ref="sourceService" timeout="10000"/>

    <dubbo:service interface="com.hhips.api.problem.WorkService" ref="workService" timeout="10000"/>

    <dubbo:service interface="com.hhips.api.problem.PaperService" ref="paperService" timeout="10000"/>

    <dubbo:service interface="com.hhips.api.problem.PaperProblemService" ref="paperProblemService" timeout="10000"/>

    <!-- 具体的实现bean（废弃，改用注解方式注入） -->
    <!--
    <bean id="demoService" class="com.hhips.service.demo.DemoServiceImpl"/>
    -->

</beans>